# Global queue and pointer for q()
q1 = []
pointer = 0
val2 = 0

#This is my basic queue
def q(command, value=None):
    global q1, pointer
    # Ensure the queue always has 10 slots
    for x in range(len(q1), 10):
        q1.append(None)

    print("Current queue:", q1)
    function = command.lower()

    if function == "add":
        if pointer == 10:
            print("List full")
            val = input("Do you want to pop?")
            val = val.lower()
            if val == "yes":
                val = input("How many do you want to pop?")
                val = int(val)
                for x in range(val):
                    q1.pop(0)
                    pointer -= 1
                if len(q1) < 10:
                    q1.append(value)
            elif val == "no":
                print("When you want to make space just remove some items from the list using remove!")
            else:
                print("No valed input")
        else:
            q1[pointer] = value
            pointer += 1
    elif function == "pop":
        if pointer == 0:
            print("Queue is empty")
        else:
            removed = q1.pop(0)
            q1.append(None)
            pointer -= 1
    else:
        print("No valid command")

    print("Queue now:", q1)
